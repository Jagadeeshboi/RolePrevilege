{{>headers}}
<title>All Bookings</title>
<style>
    #bookingTabs .nav-link {
        color: white;
        background-color: gray;
        border-radius: 5px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    #bookingTabs .nav-link.active {
        background-color: black;
        color: white;
    }

    div.top {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    div.middle {
        margin-bottom: 10px;
    }

    div.second {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }
</style>

<div class="row p-2" style="margin: 0px !important;">
    <div class="col-md-12">
        <div class="card mt-2" style="border-left: 2px solid black;">
            <div class="card-header">
                <h4><b style="color: white; font-family: 'Lato'">Prevelleges</b></h4>
            </div>
            <div class="card-body p-2" style="font-family: 'Lato'">
                <ul class="nav nav-pills" style="margin-bottom: 6px; gap:12px" id="bookingTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="all-tab" data-toggle="tab" href="#allBookings" role="tab"
                            aria-controls="allBookings" aria-selected="true">All Modules</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="upcoming-tab" data-toggle="tab" href="#upcomingBookings" role="tab"
                            aria-controls="upcomingBookings" aria-selected="false">All Prevelleges</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="roles-tab" data-toggle="tab" href="#roles" role="tab"
                            aria-controls="roles" aria-selected="false">All Roles</a>
                    </li>
                </ul>
                <div class="modal fade" id="moduleModel" tabindex="-1" aria-labelledby="whatsAppModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-lg modal-dialog-centered ">
                        <form style="padding: 12px;" action="#" class="card sms-card bg-white modal-content ">
                            <button class="close-btn">&times;</button>
                            <h5 class="mb-4 fw-semibold">Create Module</h5>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <label class="form-label">Module Name</label>
                                    <input type="type" name="remainderCredits" class="form-control" value="0">
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-control">
                                        <option value="active">active</option>
                                        <option value="inactive">in active</option>
                                    </select>
                                </div>
                            </div>
                            <div class="d-flex justify-content-right align-items-right gap-3">
                                <button class="btn btn-clear px-4" role="button"
                                    style="background-color: blue; padding:10px 20px; border:1px solid grey; margin-bottom:6px;color:white;border:none;border-radius:5px">Clear
                                    All</button>
                                <button type="submit" class="btn btn-save px-4" role="button"
                                    style="background-color: blue; padding:10px 20px; border:1px solid grey; margin-bottom:6px;color:white;border:none;border-radius:5px">Save</button>
                            </div>
                        </form>
                    </div>

                </div>

                <!-- Tabs Content -->
                <div class="tab-content" id="bookingTabsContent">
                    <!-- All Bookings Tab -->
                    <div class="tab-pane fade show active" id="allBookings" role="tabpanel" aria-labelledby="all-tab">
                        <div style="display: flex;justify-content:right;align-items:center">
                            <button role="button" data-bs-toggle="modal" data-bs-target="#moduleModel"
                                style="background-color: blue; padding:10px 20px; border:1px solid grey; margin-bottom:6px;color:white;border:none;border-radius:5px">Create
                                Module</button>

                        </div>
                        <div id="example1_wrapper">
                            <div class="row">
                                <div class="col-sm-12 table-responsive">
                                    <table id="allBookingsTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Booking Id</th>
                                                <th>Pickup Time</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Baggage</th>
                                                <th>Pickup Location</th>
                                                <th>Driver Email</th>
                                                <th>Driver Phone</th>
                                                <th>Booking Status</th>
                                                <th>Update Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each allBookings}}
                                            <tr>
                                                <td>{{sum @index 1}}</td>
                                                <td>{{#if this.name}}{{this.name}}{{else}}{{this.userId.name}}{{/if}}
                                                </td>
                                                <td>{{newFormatDate this.date}}</td>
                                                <td>{{this._id}}</td>
                                                <td>{{this.pickUpTimings}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{#if
                                                    this.phoneNumber}}{{this.phoneNumber}}{{else}}{{this.userId.phoneNumber}}{{/if}}
                                                </td>
                                                <td>{{this.baggageCount}}</td>
                                                <td>{{this.pickUpLocation}}</td>
                                                <td>{{this.driverDetails.email}}</td>
                                                <td>{{this.driverDetails.phoneNumber}}</td>
                                                <td style="text-transform: capitalize;">{{this.bookingStatus}}</td>
                                                <td>{{this.updateStatus}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upcoming Bookings Tab -->
                    <div class="tab-pane fade" id="upcomingBookings" role="tabpanel" aria-labelledby="upcoming-tab">
                        <div id="example2_wrapper">
                            <div class="row">
                                <div class="col-sm-12 table-responsive">
                                    <table id="upcomingBookingsTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Booking Id</th>
                                                <th>Pickup Time</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Baggage</th>
                                                <th>Pickup Location</th>
                                                <th>Driver Email</th>
                                                <th>Driver Phone</th>
                                                <th>Booking Status</th>
                                                <th>Update Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each allBookings}}
                                            {{#if (upcomming this.date)}}
                                            <tr>
                                                <td>{{sum @index 1}}</td>
                                                <td>{{#if this.name}}{{this.name}}{{else}}{{this.userId.name}}{{/if}}
                                                </td>
                                                <td>{{#if (eql this.date "N/A")}}{{newFormatDate
                                                    this.date}}{{else}}{{newFormatDate
                                                    this.date}}{{/if}}</td>
                                                <td>{{this._id}}</td>
                                                <td>{{this.pickUpTimings}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{#if
                                                    this.phoneNumber}}{{this.phoneNumber}}{{else}}{{this.userId.phoneNumber}}{{/if}}
                                                </td>
                                                <td>{{this.baggageCount}}</td>
                                                <td>{{this.pickUpLocation}}</td>
                                                <td>{{this.driverDetails.email}}</td>
                                                <td>{{this.driverDetails.phoneNumber}}</td>
                                                <td>{{this.bookingStatus}}</td>
                                                <td>{{this.updateStatus}}</td>
                                            </tr>
                                            {{/if}}
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="roles" role="tabpanel" aria-labelledby="roles-tab">
                        <div id="example2_wrapper">
                            <div class="row">
                                <div class="col-sm-12 table-responsive">
                                    <table id="upcomingBookingsTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>User Name</th>
                                                <th>Date</th>
                                                <th>Booking Id</th>
                                                <th>Pickup Time</th>
                                                <th>Email</th>
                                                <th>Phone</th>
                                                <th>Baggage</th>
                                                <th>Pickup Location</th>
                                                <th>Driver Email</th>
                                                <th>Driver Phone</th>
                                                <th>Booking Status</th>
                                                <th>Update Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each allBookings}}
                                            {{#if (upcomming this.date)}}
                                            <tr>
                                                <td>{{sum @index 1}}</td>
                                                <td>{{#if this.name}}{{this.name}}{{else}}{{this.userId.name}}{{/if}}
                                                </td>
                                                <td>{{#if (eql this.date "N/A")}}{{newFormatDate
                                                    this.date}}{{else}}{{newFormatDate
                                                    this.date}}{{/if}}</td>
                                                <td>{{this._id}}</td>
                                                <td>{{this.pickUpTimings}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{#if
                                                    this.phoneNumber}}{{this.phoneNumber}}{{else}}{{this.userId.phoneNumber}}{{/if}}
                                                </td>
                                                <td>{{this.baggageCount}}</td>
                                                <td>{{this.pickUpLocation}}</td>
                                                <td>{{this.driverDetails.email}}</td>
                                                <td>{{this.driverDetails.phoneNumber}}</td>
                                                <td>{{this.bookingStatus}}</td>
                                                <td>{{this.updateStatus}}</td>
                                            </tr>
                                            {{/if}}
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
